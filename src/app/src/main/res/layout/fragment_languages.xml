<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="#efeff5"
    tools:context="product_scanner.product_scanner.LanguagesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textlanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/select_l"
        android:textColor="#7373a5"/>
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_below="@id/textlanguage"
            android:id="@+id/layout1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:drawableTop="@drawable/icon_france"
                android:id="@+id/français"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#7373a5"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Français"
                />
            <Button
                android:drawableTop="@drawable/icon_turkey"
                android:drawablePadding="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/turkish"
                android:textColor="#7373a5"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Türkçe" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/turkish"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_usa"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="English"
                android:textColor="#7373a5" />

            <Button
                android:id="@+id/viet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/english"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/icon_vietnam"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="tiếng Việt"
                android:textColor="#7373a5" />
        </LinearLayout>
    </TableLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_below="@id/table"
        android:gravity="center_horizontal">
        >
        <Button
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_back"
            android:text="@string/back"
            android:drawableLeft="@drawable/icon_back"
            android:textColor="#7373a5"
            android:background="#ffffff"
            android:padding="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>



</RelativeLayout>
