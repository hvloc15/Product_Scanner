<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="product_scanner.product_scanner.ProductFragment"
    android:background="@drawable/new_login_gradients">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:id="@+id/relativeLayout">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/screenshoot_slider"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:background="#3f3f3f"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true">

                    </android.support.v4.view.ViewPager>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_alignParentBottom="true"
                        android:background="#40000000">

                        <TextView
                            android:id="@+id/textView_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="15sp"
                            android:layout_marginTop="7sp"
                            android:text="Sport Boots"
                            android:textColor="#fff"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView_product_name"
                            android:layout_alignBottom="@+id/textView_product_name"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="15sp"
                            android:layout_marginTop="7sp"
                            android:text="300$"
                            android:textColor="#fff"
                            android:textSize="23sp"
                            android:textStyle="normal" />


                        <ImageButton
                            android:id="@+id/button_scan"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="15sp"
                            android:layout_below="@+id/textView_product_name" />


                    </RelativeLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="2">

                    <Button
                        android:id="@+id/button_add_to_cart"
                        style="@style/Base.TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/button_add_to_cart"
                        android:text="add to cart"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:layout_weight="1"/>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
